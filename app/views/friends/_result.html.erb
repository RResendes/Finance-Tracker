<% if params[:action] == 'search' %>
    <div class="results-block">
        <%= bootstrap_flash %>
    </div>
<% end %>

<% if @users %>
    <div id="friend lookup-results" class="well results-block col-md-10">
        <table class="search-results col-md-12">
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td><strong>Name: </strong></br> <%= user.full_name %></td>
                        <td><strong>Email: </strong></br> <%= user.email %></td>
                        <td><strong>Profile: </strong></br> <%= link_to "View Profile", "#", class: "btn btn-xs btn-success" %>
                            <%= link_to "Add as my friend", add_friend_path(user: current_user, friend: user), 
                            class: "btn btn-xs btn-success", method: :post %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% end %>